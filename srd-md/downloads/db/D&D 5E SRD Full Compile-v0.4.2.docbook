    <section xml:id="dominate-person">
      <title>Dominate Person</title>
      <para>
        <emphasis>5th-level enchantment</emphasis>
      </para>
      <para>
        <emphasis role="strong">Casting Time:</emphasis> 1 action
      </para>
      <para>
        <emphasis role="strong">Range:</emphasis> 60 feet
      </para>
      <para>
        <emphasis role="strong">Components:</emphasis> V, S
      </para>
      <para>
        <emphasis role="strong">Duration:</emphasis> Concentration, up
        to 1 minute
      </para>
      <para>
